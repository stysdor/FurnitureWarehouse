@model Furniture.Models.ProductOrderModel
  

<tr class="productOrder">
    @using (Html.BeginCollectionItem("ProductOrders"))
    {
        <td class="col-8">
            @Html.LabelFor(x => x.SelectedCategory, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.SelectedCategory, new SelectList(Model.Categories, "Id", "Name"), "Wybierz kategorię", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SelectedCategory, null, new { @class = "text-danger" })
            </div>
        </td>
        <td class="col-2"></td>
        <td class="col-2">
            <button type="button" class="delete btn btn-primary btn-block pull-right">Usuń</button>
        </td>
    }
</tr>
<script>
    $('.delete').click(function () {
        var container = $(this).closest('.productOrder');
        container.remove();
    });
</script>

